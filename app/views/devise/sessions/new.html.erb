<section class="vh-100">
  <div class="h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg rounded-custom" style="
          background: hsla(0, 0%, 100%, 0.3);
          backdrop-filter: blur(10px);
        ">
          <div class="card-body p-5 text-center">

            <h2 class="mb-5">Sign in</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control form-control-lg" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"form-control form-control-lg" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-check d-flex justify-content-start mb-4">
                  <%= f.check_box :remember_me, class:"form-check-input" %>
                  <%= f.label :remember_me, class:"form-check-label ms-2" %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Login", class:"btn btn-primary btn-lg btn-block w-100" %>
              </div>
            <% end %>

            <div class="d-flex flex-column flex-sm-row justify-content-between mt-4 gap-4">
              <%= render "devise/shared/links" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

