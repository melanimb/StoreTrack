<section class="vh-100">
  <div class="h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg rounded-custom" style="
          background: hsla(0, 0%, 100%, 0.3);
          backdrop-filter: blur(10px);
        ">
          <div class="card-body p-5">

            <h2 class="mb-5 text-center">Forgot your password?</h2>

            <%= form_for(resource, as: resource_name, url:password_path(resource_name), html: { method: :post }) do |f| %>
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control form-control-lg" %>
              </div>

              <div class="actions">
                <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-lg btn-block w-100" %>
              </div>
            <% end %>

            <div class="d-flex flex-column flex-sm-row justify-content-between mt-4 gap-4">
              <%= render "devise/shared/links" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
