<div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure you want to delete this client?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to @client, method: :delete, class: 'btn btn-primary' do %>
          <span class="d-none d-md-inline">Confirm</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= link_to clients_path do %>
      <%= bootstrap_icon('caret-left-fill', class: "mb-2") %>
      <span class="fs-5">Clients</span>
    <% end %>
  </div>

  <div class="col d-flex justify-content-end gap-3">
    <%= link_to edit_client_path(@client), class: 'btn btn-secondary' do %>
        <%= bootstrap_icon('pencil-fill', class: "mb-1") %>
        <span class="d-none d-md-inline">Edit</span>
    <% end %>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      <%= bootstrap_icon('trash3-fill', class: "mb-1") %>
      <span class="d-none d-md-inline">Delete</span>
    </button>
  </div>
</div>

<div class="card my-3">
  <div class="card-body d-flex gap-3">
    <img src=<%= asset_path 'user.png' %> width="40" alt="client_photo" class="d-none d-sm-inline">
    <h5 class="card-title mt-2">
      <strong><%= @client.full_name %></strong>
    </h5>
  </div>
</div>

<div class="card">
  <div class="card-body d-flex flex-column gap-4">
    <span>
      <strong>Address:</strong>
      <%= @client.address %>
    </span>

    <span>
      <strong>Email:</strong>
      <%= @client.email %>
    </span>

    <span>
      <strong>Phone:</strong>
      <%= @client.phone %>
    </span>
  </div>
</div>
