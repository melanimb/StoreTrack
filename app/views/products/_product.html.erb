<%= link_to product_path(product), class: 'card btn btn-outline-secondary text-dark shadow-sm p-3 mb-3 rounded-custom' do %>
  <div class="card-body text-start" id="<%= dom_id product %>">
    <p>
      <strong>Name:</strong>
      <%= product.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= product.price %>
    </p>

    <p>
      <strong>Quantity:</strong>
      <%= product.quantity %>
    </p>

    <p>
      <strong>Store:</strong>
      <%= product.store_id %>
    </p>

  </div>
<% end %>
