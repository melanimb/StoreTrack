<%= link_to product_path(product), class: 'col card btn btn-outline-secondary text-dark shadow-sm p-3 rounded-custom' do %>
  <div class="card-body text-start" id="<%= dom_id product %>">
    <p>
      <strong>Code:</strong>
      <%= product.code %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= product.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= product.price %>
    </p>

    <p>
      <strong>Quantity:</strong>
      <%= product.quantity %>
    </p>
  </div>
<% end %>
