<%= link_to product_path(product), class: 'card d-flex flex-row btn btn-outline-secondary text-dark shadow-sm p-3 mb-3 rounded-custom' do %>
  <span class="text-start d-none d-md-inline col col-md-3">
    <%= product.code %>
  </span>

  <span class="text-start col col-sm-8 col-md-6 col-lg-5">
    <%= product.name %>
  </span>

  <span class="text-start d-none d-sm-inline col col-sm-4 col-md-3 col-lg-2 ps-3">
    <%= product.price %>
  </span>

  <span class="text-start d-none d-lg-inline col col-lg-2 ps-4">
    <%= product.quantity %>
  </span>
<% end %>
