<%= form_with(model: product) do |form| %>
  <div class="card my-3 p-2">
    <div class="row g-0 align-items-center">
      <div class="col-12 col-lg-6">
        <div class="card-body inputs-container d-flex flex-column gap-4">
          <div>
            <%= form.text_field :code, class: "form-control", placeholder: "Code" %>
          </div>

          <div>
            <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
          </div>

          <div>
            <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
          </div>

          <div>
            <%= form.text_field :price, class: "form-control", placeholder: "Price" %>
          </div>

          <div>
            <%= form.number_field :quantity, class: "form-control", placeholder: "Quantity" %>
          </div>

          <div class="btn-toolbar gap-2 justify-content-end justify-content-md-start">
            <%= link_to 'Cancel', products_path, class: "btn btn-secondary" %>
            <%= form.submit "Save" , class: "btn btn-primary px-3" %>
          </div>
        </div>
      </div>

      <div class="col-lg-6 text-center">
        <img src=<%= asset_path 'bag.png' %> alt="product_photo" class="d-none d-lg-inline img-fluid opacity-25" width="250">
      </div>
    </div>
  </div>
<% end %>
